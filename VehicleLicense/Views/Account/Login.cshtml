@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="main-content main-content-login">
    <div class="container" style="padding-bottom:450px !important;">
        <div class="row">
            <div class="content-area col-lg-12 col-md-12 col-sm-12 col-xs-12 p-3">
                <div class="site-main">
                    <div class="customer_login">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-12" style="justify-content:center; margin-left:290px;">
                                <div class="login-item">
                                    <h5 class="title-login text-center">Login your Account</h5>
                                    <form asp-action="LogIn" asp-controller="Account" method="post" class="login">
                                        <p class="form-row form-row-wide">
                                            <label class="text">Username</label>
                                            <input name="UserName" title="username" type="text" class="input-text" required>
                                        </p>
                                        <p class="form-row form-row-wide">
                                            <label class="text">Password</label>
                                            <input name="Password" title="password" type="password" class="input-text" required>
                                        </p>
                                        <p class="lost_password">
                                            <span class="inline">
                                                <input type="checkbox" id="cb1">
                                                <label for="cb1" class="label-text">Remember me</label>
                                            </span>
                                            <a href="#" class="forgot-pw">Forgot password?</a>
                                        </p>
                                        <p class="form-row text-center">
                                            <input type="submit" class="button-submit" value="login">
                                        </p>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


